  <ontology>
    <term_definitions language="en">
      <items code="at0000">
        <items id="text">Meditation activity summary</items>
        <items id="description">A summary of the typical level of meditation activity undertaken by the individual.</items>
      </items>
      <items code="at0001">
        <items id="text">Tree</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0002">
        <items id="text">Meditation activity level(MAL) status</items>
        <items id="description">The category of the typical, or usual, meditation activity level of an individual.</items>
        <items id="comment">Coding with a terminology is desirable, where possible.</items>
      </items>
      <items code="at0003">
        <items id="text">Description</items>
        <items id="description">A narrative description about the individual's typical level of meditation activity</items>
      </items>
      <items code="at0005">
        <items id="text">Barrier</items>
        <items id="description">Identified factor that prevents the individual to become more active in meditation</items>
      </items>
      <items code="at0006">
        <items id="text">Enabler</items>
        <items id="description">Identified factor that may support the individual to become more active in meditation.</items>
        <items id="comment">For example: lives close to a swimming pool; or previously an elite athlete.</items>
      </items>
      <items code="at0008">
        <items id="text">Typical meditation frequency</items>
        <items id="description">Typical number of minutes of moderate meditation.</items>
      </items>
      <items code="at0009">
        <items id="text">Unable</items>
        <items id="description">The individual is incapable, for example a bedridden person.</items>
      </items>
      <items code="at0010">
        <items id="text">Inactive</items>
        <items id="description">The individual does not do any meditation</items>
      </items>
      <items code="at0011">
        <items id="text">Moderately active</items>
        <items id="description">The individual is moerately active in meditation. For example 20 min of meditation everyday</items>
      </items>
      <items code="at0012">
        <items id="text">Vigorously active</items>
        <items id="description">The individual is very active in meditation, for example a person doing meditation for 45-60 min daily.</items>
      </items>
      <items code="at0013">
        <items id="text">Extremely active</items>
        <items id="description">The individual is extremely active, for example more than 1 hour of meditation</items>
      </items>
      <items code="at0014">
        <items id="text">Tree</items>
        <items id="description">@ internal @</items>
      </items>
      <items code="at0015">
        <items id="text">Extension</items>
        <items id="description">Additional information required to capture local content or to align with other reference models/formalisms.</items>
        <items id="comment">For example: local information requirements or additional metadata to align with FHIR or CIMI equivalents.</items>
      </items>
      <items code="at0016">
        <items id="text">Last updated</items>
        <items id="description">The date when the physical activity summary was last updated.</items>
      </items>
      <items code="at0017">
        <items id="text">Style of meditation</items>
        <items id="description">The type of meditation technique that the person follows regularly</items>
      </items>
      <items code="at0018">
        <items id="text">Experience level</items>
        <items id="description">*</items>
      </items>
      <items code="at0019">
        <items id="text">First timer</items>
        <items id="description">*</items>
      </items>
      <items code="at0020">
        <items id="text">Beginner</items>
        <items id="description">*</items>
      </items>
