definition
	EVALUATION[at0000] matches {	-- Meditation activity summary
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Meditation activity level(MAL) status
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0009, 	-- Unable
									at0010, 	-- Inactive
									at0011, 	-- Moderately active
									at0012, 	-- Vigorously active
									at0013]	-- Extremely active
								}
							}
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0018] occurrences matches {0..1} matches {	-- Experience level
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0019, 	-- First timer
									at0020, 	-- Beginner
									at0021, 	-- Intermediate
									at0022]	-- Advanced
								}
							}
						}
					}
					ELEMENT[at0017] occurrences matches {0..1} matches {	-- Style of meditation
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Description
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Typical meditation frequency
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::382]>
								list = <
									["1"] = <
										units = <"1/d">
									>
									["2"] = <
										units = <"1/wk">
									>
									["3"] = <
										units = <"1/mo">
									>
								>
							>
						}
					}
					ELEMENT[at0005] occurrences matches {0..*} matches {	-- Barrier
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0006] occurrences matches {0..*} matches {	-- Enabler
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0014] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0016] occurrences matches {0..1} matches {	-- Last updated
						value matches {
							DV_DATE_TIME matches {*}
						}
					}
					allow_archetype CLUSTER[at0015] occurrences matches {0..*} matches {	-- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

ontology
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"Meditation activity summary">
					description = <"A summary of the typical level of meditation activity undertaken by the individual.">
				>
				["at0001"] = <
					text = <"Tree">
					description = <"@ internal @">
				>
				["at0002"] = <
					text = <"Meditation activity level(MAL) status">
					description = <"The category of the typical, or usual, meditation activity level of an individual.">
					comment = <"Coding with a terminology is desirable, where possible.">
				>
				["at0003"] = <
					text = <"Description">
					description = <"A narrative description about the individual's typical level of meditation activity">
				>
				["at0005"] = <
					text = <"Barrier">
					description = <"Identified factor that prevents the individual to become more active in meditation">
				>
				["at0006"] = <
					text = <"Enabler">
					description = <"Identified factor that may support the individual to become more active in meditation.">
					comment = <"For example: lives close to a swimming pool; or previously an elite athlete.">
				>
				["at0008"] = <
					text = <"Typical meditation frequency">
					description = <"Typical number of minutes of moderate meditation.">
				>
				["at0009"] = <
					text = <"Unable">
					description = <"The individual is incapable, for example a bedridden person.">
				>
				["at0010"] = <
					text = <"Inactive">
					description = <"The individual does not do any meditation">
				>
				["at0011"] = <
					text = <"Moderately active">
					description = <"The individual is moerately active in meditation. For example 20 min of meditation everyday">
				>
				["at0012"] = <
					text = <"Vigorously active">
					description = <"The individual is very active in meditation, for example a person doing meditation for 45-60 min daily.">
				>
				["at0013"] = <
					text = <"Extremely active">
					description = <"The individual is extremely active, for example more than 1 hour of meditation">
				>
